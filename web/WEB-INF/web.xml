<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/mainPool</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- SERVLET -->
    <servlet>
        <servlet-name>ControllerServlet</servlet-name>
        <servlet-class>net.chikaboom.servlet.ControllerServlet</servlet-class>
    </servlet>

    <!-- MAPPING -->
    <servlet-mapping>
        <servlet-name>ControllerServlet</servlet-name>
        <url-pattern>/chikaboom</url-pattern>
    </servlet-mapping>
    
    <!-- LOGIN REQUIREMENT FILTER -->
    <filter>
        <filter-name>LoginRequirementFilter</filter-name>
        <filter-class>net.chikaboom.filter.LoginRequirementFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LoginRequirementFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
</web-app>